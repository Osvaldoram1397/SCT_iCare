                    </td>
                    <td>
                        @item.Sucursal
                    </td>
                    <td>
                        <b>@conteo</b>
                    </td>
                    <td>
                    </td>
                    <td>
                        @{
                            var idPaciente = (from id in db.Cita select id).Where(s => s.FechaReferencia >= thisDate && s.FechaReferencia < tomorrowDate && s.Sucursal == item.Sucursal && s.Canal == item.Canal);
                            var idPaciente2 = (from id in db.Cita select id).Where(s => s.FechaReferencia >= thisDate && s.FechaReferencia < tomorrowDate && s.Sucursal == item.Sucursal && s.Canal == item.Canal).FirstOrDefault();

                            int n = 0;

                            foreach (var item1 in idPaciente)
                            {
                                var estatus = (from c in db.Captura select c).Where(s => s.FechaExpdiente >= thisDate && s.FechaExpdiente < tomorrowDate && s.Sucursal == item.Sucursal && s.EstatusCaptura == "Terminado" && s.idPaciente == item1.idPaciente).FirstOrDefault();
                                if (estatus != null)
                                {
                                    n++;
                                }

                                <div class="modal fade" id="exampleModal_@idPaciente2.idCita" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color:gold">
                                                <h3 class="modal-title" id="exampleModalLabel"><span class="glyphicon glyphicon-duplicate"></span> &nbsp; &nbsp;EPIs en Captura: <b>@item.Canal</b></h3>
                                            </div>
                                            <div class="modal-body">
                                                @{
                                                    foreach (var item2 in idPaciente)
                                                    {
                                                        var captura = (from c in db.Captura where c.idPaciente == item2.idPaciente select c).FirstOrDefault();
                                                        var nombre = (from c in db.Paciente where c.idPaciente == item2.idPaciente select c.Nombre).FirstOrDefault();
                                                        if (captura != null)
                                                        {
                                                            if (captura.EstatusCaptura == "No iniciado")
                                                            {
                                                                <b>@nombre: <span class="text-info">@captura.EstatusCaptura</span></b><br />
                                                            }
                                                            else if (captura.EstatusCaptura == "Pendiente" || captura.EstatusCaptura == "Pausado")
                                                            {
                                                                <b>@nombre:<span class="text-warning">@captura.EstatusCaptura</span> </b><br />
                                                            }
                                                            else if (captura.EstatusCaptura == "Terminado")
                                                            {
                                                                <b>@nombre: <span class="text-success">@captura.EstatusCaptura</span></b><br />
                                                            }

                                                        }
                                                        else
                                                        {
                                                            <b>@nombre: <span class="text-danger">Pendiente de digitalizar</span></b><br />
                                                        }

                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            if (n == 0)
                            {
                                <a data-toggle="modal" data-target="#exampleModal_@idPaciente2.idCita"><mark class="bg-warning">Pendientes</mark></a>
                            }
                            else if (n != conteo)
                            {
                                <a data-toggle="modal" data-target="#exampleModal_@idPaciente2.idCita"><mark class="bg-info">Parcialmente Listos</mark></a>
                            }
                            else if (n == conteo)
                            {
                                <a data-toggle="modal" data-target="#exampleModal_@idPaciente2.idCita"><mark class="bg-success">Todos Listos</mark></a>
                            }


                        }



                    </td>
                </tr>


                flag += 1;

            }

        </table>
    </div>
