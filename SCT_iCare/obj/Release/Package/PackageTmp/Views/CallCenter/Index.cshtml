@model IEnumerable<SCT_iCare.Consultorios>
@{
    ViewBag.Title = "Index";
}

<br />

<br />

<h4 style="color:white">Venta por Call Center</h4>

<hr />


<div class="container formularioLogin2">
    <div class="row">
        <div class="">
            <div>
                <form action="@Url.Content("~/CallCenter/Orden")" asp-controller="Login" id="Login" method="post">
                    <div class="form-group col-md-12" style="margin-bottom:6%">
                        <label class="col-md-12 text-info"><h4>Datos de la solicitud:</h4></label>
                        <br />
                        <label class="col-md-12"><h5>Consultorio asignado:</h5></label>
                        <select name="consultorio" style="width:100%; min-height:5vh; min-width:99%; font-size:2vh" class="form-select labelGral">
                            <option value="value1" selected>--Estados, Consultorios y Doctores--</option>
                            <option value="SATELITE">SATÉLITE -- EDOMEX</option>
                            <option value="LINDAVISTA">LINDAVISTA -- CDMX</option>
                            <option value="UNIVERSIDAD">UNIVERSIDAD -- CDMX</option>
                            <option value="VERACRUZ">VERACRUZ -- VER</option>
                            @*@{
                                var consultorios = Model.OrderBy(i => i.Estado).ToList(); //from c in Model select c;

                                foreach (var item in consultorios)
                                {
                                    <option value="@item.Consultorio">@item.Estado , @item.Consultorio</option>
                                }
                            }*@
                        </select>
                    </div>
                    <br />
                    <div class="form-group col-md-12">
                        <label class="col-md-4"><h5>Nombre del Cliente:</h5></label>
                        <input type="text" asp-for="nombre" class="form-control col-md-8" name="nombre" />
                    </div>
                    <div class="form-group col-md-12">
                        <label class="col-md-4"><h5>Email:</h5></label>
                        <input type="text" asp-for="email" class="form-control col-md-8" name="email" /> @*@Html.TextBox("Password")*@
                    </div>
                    <div class="form-group col-md-12">
                        <label class="col-md-4"><h5>Teléfono:</h5></label>
                        <input type="tel" asp-for="telefono" class="form-control col-md-8" name="telefono" /> @*@Html.TextBox("Password")*@
                    </div>
                    <br />
                    <div class="form-group col-md-12">
                        <label class="col-md-4"><h5></h5></label>
                        <input type="submit" asp-for="crearOrden" class="form-control btn btn-primary" style="width:100%" value="Crear Orden" />
                        @*<button class="btn btn-primary botones">@Html.ActionLink("Sign In", "Ingresar", "Login")</button>*@
                    </div>
                </form
            </div>
        </div>
    </div>
</div>

<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


