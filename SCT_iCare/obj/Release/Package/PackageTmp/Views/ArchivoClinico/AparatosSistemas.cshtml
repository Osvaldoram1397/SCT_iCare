        <input type="checkbox" name="cuello" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
    </div>
    <div class="form-group">
        <label style="color:white">20. ¿Tiene alguna alteración en el abdomen?</label><br />
        <input type="checkbox" name="abdomen" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
    </div>
    <div class="form-group">
        <label style="color:white">21. ¿Tiene alguna alteración en las extremidades?</label><br />
        <input type="checkbox" name="extremidades" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
    </div>

    <br />


    <input type="hidden" value="@idPaciente" name="id" />
    @*<input type="submit" class="btn btn-success" value="Guardar Examen" />*@

    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#confirmacion">Guardar Examen</button>

    <div class="modal fade" id="confirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" @*style="width:60%; min-width:300px"*@>
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-primary" id="exampleModalLabel"><b>¿Desea guardar lo datos del examen médico?</b></h4>
