
@{
    ViewBag.Title = "AparatosSistemas";

    GMIEntities db = new GMIEntities();

    int idPaciente = Convert.ToInt32(ViewBag.idPaciente);

    var nombrePaciente = (from d in db.Paciente where d.idPaciente == idPaciente select d.Nombre).FirstOrDefault();

    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

    <style>
        .toggle.ios, .toggle-on.ios, .toggle-off.ios {
            border-radius: 20rem;
            background-color: white;
        }

            .toggle.ios .toggle-handle {
                border-radius: 20rem;
                background-color: white;
            }
    </style>
}

<br />
<h3 class="text-center" style="color:white"><span style="color:darkgoldenrod">Examen Historia Clínica: </span>@nombrePaciente </h3>
<br />


<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="#" style="text-decoration:none; color:goldenrod">Heredofamiliares</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" style="text-decoration:none; color:goldenrod">No Patológicos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" style="text-decoration:none; color:goldenrod">Patológicos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="#" style="text-decoration:none; color:goldenrod"><b>APARATOS Y SISTEMAS</b></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" style="text-decoration:none; color:goldenrod">Exploración Física</a>
    </li>
</ul>

<br />

<form method="post" enctype="multipart/form-data" action="@Url.Content("~/ArchivoClinico/Guardar_AparatosSistemas")" style="display:inline-block; margin:0.5%">

    <div class="form-group">
        <label style="color:white">1. ¿Tiene Algun Síntoma?</label><br />
        <input type="checkbox" name="sintoma" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
    </div>
    <div class="form-group">
        <label style="color:white">2. ¿Tiene alguna alteracíon de la vista?</label><br />
        <input type="checkbox" name="alteracion" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
    </div>

    @*<div class="form-group">
            <label style="color:white">¿Utiliza Lentes?</label>
            <input type="checkbox" name="lentes" data-toggle="toggle" data-onstyle="outline-white" data-offstyle="outline-white" data-style="ios" data-on="Si" data-off="No">
        </div>*@

    <div>
        <label style="color:white">3. ¿Utiliza lentes?: </label><br />
        <select class="form-select" aria-label="Default select example" name="lentes">
            <option selected disabled>Selecciona una opción</option>
            <option value="NO">NO</option>
            <option value="AEREO">Aéreo</option>
            <option value="CONTACTO">Contacto</option>

        </select>
    </div>
    <br />
    <div class="form-group">
        <label style="color:white">4. ¿Tiene alguna alteración de la audición?</label><br />
