
@{
    ViewBag.Title = "CARDIOLOGÍA";
    GMIEntities db = new GMIEntities();

    int idPaciente = Convert.ToInt32(ViewBag.idPaciente);

    var nombrePaciente = (from d in db.Paciente where d.idPaciente == idPaciente select d.Nombre).FirstOrDefault();
}

<br />
<h3 class="text-center" style="color:white"><span style="color:darkgoldenrod">Examen Cardiología: </span>@nombrePaciente </h3>
<br />

<form method="post" enctype="multipart/form-data" action="@Url.Content("~/ArchivoClinico/Guardar_Cardiologia")" style="display:inline-block; margin:0.5%">

    <div class="form-check">
        <h4 style="color:white">1. Ritmo:</h4>
        <input class="form-check-input" type="radio" name="ritmo" id="sinusual" value="Sinusal" checked>
        <label style="color:white" class="form-check-label" for="gridRadios1">
            Sinusal <br />
        </label>
        <input class="form-check-input" type="radio" name="ritmo" id="nosinusal" value="No Sinusal">
        <label style="color:white" class="form-check-label" for="gridRadios1">
            No Sinusual
        </label>
    </div>

    <br />

    <div class="form-group">
        <label style="color:white">2. Frecuencia:</label>
        <input class="form-control" type="number" name="frecuencia" id="frecuencia" placeholder="" required>
    </div>

    <div class="form-group">
        <label style="color:white">3. Eje:</label>
        <input class="form-control" type="number" name="eje" id="eje" placeholder="" required>
    </div>

    <div class="form-group">
        <label style="color:white">4. Intervalo PR:</label>
        <input class="form-control" type="number" name="pr" id="intervalopr" placeholder="" required>
    </div>

    <div class="form-group">
        <label style="color:white">5. Intervalo QT:</label>
        <input class="form-control" type="number" name="qt" id="intervaloqt" placeholder="" required>
    </div>

    <div class="form-group">
        <label style="color:white">6. Intervalo QRS:</label>
        <input class="form-control" type="number" name="qrs" id="intervaloqrs" placeholder="" required>
    </div>


    <div class="form-group">
        <label style="color:white">7. Onda P:</label>
        <input class="form-control" type="number" id="ondap" name="ondap" placeholder="" required>
    </div>

    <div class="form-group">
        <label style="color:white">8. Onda T:</label>
        <input class="form-control" type="number" name="ondaT" id="ondat" placeholder="" required>
    </div>
    <br />

    <input type="hidden" value="@idPaciente" name="id" />
    @*<input type="submit" class="btn btn-success" value="Guardar Examen" />*@

    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#confirmacion">Guardar Examen</button>

    <div class="modal fade" id="confirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" @*style="width:60%; min-width:300px"*@>
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-primary" id="exampleModalLabel"><b>¿Desea guardar lo datos del examen médico?</b></h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <input type="submit" class="btn btn-success" value="Guardar Examen" />
                </div>
            </div>

        </div>
    </div>
</form>
<br />
<form method="post" enctype="multipart/form-data" action="@Url.Content("~/ArchivoClinico/Index")" style="display:inline-block; margin:0.5%">
    <input type="hidden" value="@idPaciente" name="id" />
    <input type="submit" class="btn btn-info" value="Regresar a Carrusel" />
</form>

