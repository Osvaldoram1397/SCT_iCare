                            <form method="post" enctype="multipart/form-data" action="@Url.Content("~/Gestoria/CreateSaldo")">
                                <div class="modal fade" id="epis_@item.idReferido" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3 class="modal-title text-primary" id="exampleModalLabel"><b>¿Cuántos EPIs desea usar de <span class="text-danger">@item.Nombre</span>?</b></h3>
                                            </div>
                                            <div class="modal-body">

                                                <div class="form-inline">
                                                    <label for="recipient-name" class="col-form-label">Cantidad de EPIs requeridos (Autotransporte, Marítimos y Ferroviarios):</label>
                                                </div>
                                                <div class="form-inline">
                                                    <span class="">
                                                        <button class="btn btn-info" id="menos3" type="button"><b><span class="glyphicon glyphicon-minus"></span></b></button>
                                                    </span>
                                                    <input style="display:inline-block" type="number" class="form-control" id="contador3" min="1" name="cantidad" placeholder="Ingresa una cantidad">
                                                    <span class="">
                                                        <button class="btn btn-info" id="mas3" type="button"><b><span class="glyphicon glyphicon-plus"></span></b></button>
                                                    </span>
                                                    <br />
                                                    <br />
                                                </div>
                                                <div class="form-inline">
                                                    <label for="recipient-name" class="col-form-label">Cantidad de EPIs requeridos (Aéreos):</label>
                                                </div>
                                                <div class="form-inline">
                                                    <span class="">
                                                        <button class="btn btn-warning" id="menos33" type="button"><b><span class="glyphicon glyphicon-minus"></span></b></button>
                                                    </span>
                                                    <input style="display:inline-block" type="number" class="form-control" id="contador33" min="1" name="cantidadAereo" placeholder="Ingresa una cantidad">
                                                    <span class="">
                                                        <button class="btn btn-warning" id="mas33" type="button"><b><span class="glyphicon glyphicon-plus"></span></b></button>
                                                    </span>
                                                    <br />
                                                    <br />
                                                </div>

                                                <input type="hidden" class="form-control" id="nombre" name="nombre" value="@item.Nombre" />
                                                <input type="hidden" class="form-control" id="telefono" name="telefono" value="5555555555">
                                                <input type="hidden" class="form-control" id="email" name="email" value="sin mail">
                                                <input type="hidden" name="usuario" asp-for="file" class="" required value="@nombreUsuario" />
                                                <input type="hidden" class="form-control" id="referencia" name="referencia" value="N/A">
                                                <input type="hidden" class="form-control" id="referido" name="referido" value="@item.Nombre">

                                                <div class="form-group" style="width:60%; min-width:320px">
                                                    <label for="recipient-name" class="col-form-label">Sucursal:</label>
                                                    <select name="sucursal" style="width:100%; min-height:5vh; min-width:99%; font-size:2vh" class="form-select">
                                                        @{
                                                            var sucursalesOption5 = from s in db.Sucursales select s.Nombre;
                                                            foreach (var opcion in sucursalesOption5)
                                                            {
                                                                <option value="@opcion">@opcion</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>

                                                <div class="form-group" style="width:60%; min-width:320px">
                                                    <label for="recipient-name" class="col-form-label">Tipo de Pago:</label>
                                                    <select name="pago" style="width:100%; min-height:5vh; min-width:99%; font-size:2vh" class="form-select">
                                                        <option value="Referencia OXXO">Referencia OXXO</option>
                                                        <option value="Referencia Scotiabank">Referencia Scotiabank</option>
                                                        <option value="Referencia BanBajío">Referencia BanBajío</option>
                                                        <option value="Pago con Tarjeta">Pago con Tarjeta</option>
                                                        <option value="Transferencia vía Scotiabank">Transferencia vía Scotiabank</option>
                                                        <option value="Transferencia vía BanBajío">Transferencia vía BanBajío</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="recipient-name" class="col-form-label">Fecha de Cita:</label>
                                                    <input type="date" class="form-control" id="fecha" name="fecha" required>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <input type="submit" value="Enviar" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </td>
                    </tr>
                    flagSaldo++;
                }

            </table>
        </div>
