<form method="post" enctype="multipart/form-data" action="@Url.Content("~/ArchivoClinico/Guardar_Dictamen")" style="display:inline-block; margin:0.5%">

    <h4 style="text-align:left; color:white">Nota Médica:</h4>
    <textarea style="width:300vw" name="nota"></textarea>

    <br />
    <br />

    <input type="hidden" value="@idPaciente" name="id" />
    <input type="submit" name="accion" class="btn btn-success" value="APTO" />

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#noapto">NO APTO</button>

    <div class="modal fade" id="noapto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" @*style="width:60%; min-width:300px"*@>
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-primary" id="exampleModalLabel"><b>¿Que acción desea realizar?</b></h4>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="accion" class="btn btn-danger" value="Liberar como NO APTO" />
                    <input type="submit" name="accion" class="btn btn-warning" value="Enviar a Revaloración" />
                </div>
            </div>

        </div>
    </div>
</form>
