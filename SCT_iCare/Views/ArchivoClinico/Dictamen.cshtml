    <h4 style="text-align:left; color:white"><b>Campo Visual: </b><span class="text-primary"> @consulta.CampoVisual</span></h4>
    <h4 style="text-align:left; color:white"><b>Movimientos Oculares: </b><span class="text-primary"> @consulta.MovimientosOculares</span></h4>
    <h4 style="text-align:left; color:white"><b>Ojo derecho Reflejos Pupilares: </b><span class="text-primary"> @consulta.DerechoRP</span></h4>
    <h4 style="text-align:left; color:white"><b>Ojo izquierdo Reflejos Pupilares: </b><span class="text-primary"> @consulta.IzquierdoRP</span></h4>
    if (consulta.Cromatica == "Deuteranop")
    {
        <h4 style="text-align:left; color:white"><b>Tensión de Visión Cromática: </b><span class="text-primary"> Deuteranopia con carta de no accidentes y desempeño</span></h4>
    }
    else if (consulta.Cromatica == "Ir a SCT")
    {
        <h4 style="text-align:left; color:white"><b>Tensión de Visión Cromática: </b><span class="text-primary"> Deuteranopia con carta de no accidentes y sin carta de desempeño (Ir a SCT)</span></h4>
    }
    else if (consulta.Cromatica == "Protanopia")
    {
        <h4 style="text-align:left; color:white"><b>Tensión de Visión Cromática: </b><span class="text-primary"> Protanopia (No apto)</span></h4>
    }
