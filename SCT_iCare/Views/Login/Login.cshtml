
@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<body class="bodyLogin">
    <div class="container formularioLogin">
        <div class="row">
            <div class="">
                <form asp-action="Login" asp-controller="Login" id="Login">
                    <div>
                        <img src="~/Images/IcareLogo.png" class="imagenLogin"/>
                    </div>
                    <br />
                    <div class="form-group col-md-12">
                        <label><h5>Email:</h5></label>
                        <input type="text" asp-for="email" class="form-control inputLogin" />
                    </div>
                    <div class="form-group col-md-12">
                        <label><h5>Contraseña:</h5></label>
                        <input type="password" asp-for="password" class="form-control inputLogin" />
                    </div>
                    <br />
                    <div class="form-group col-md-12">
                        <input type="button" asp-for="password" class="form-control btn btn-primary inputLogin" value="Sign In" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</body>

