@model SCT_iCare.Usuarios

@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<body class="bodyLogin">
    <div class="container formularioLogin">
        <div class="row">
            <div class="">
                <div>
                    <form action="@Url.Content("~/Login/Login")" asp-controller="Login" id="Login" method="post">
                        <div>
                            <img src="~/Images/IcareLogo.png" class="imagenLogin" />
                        </div>
                        <br />
                        <div class="form-group col-md-12">
                            <label><h5>Email:</h5></label> 
                            <input type="text" asp-for="email" class="form-control inputLogin" name="User" /> @*@Html.TextBox("Email")*@
                        </div>
                        <div class="form-group col-md-12">
                            <label><h5>Contraseña:</h5></label>
                            <input type="password" asp-for="password" class="form-control inputLogin" name="Pass" /> @*@Html.TextBox("Password")*@
                        </div>
                        <br />
                        <div class="form-group col-md-12">
                            <input type="submit" asp-for="ingresar" class="form-control btn btn-primary inputLogin" value="Sign In" />
                            @*<button class="btn btn-primary botones">@Html.ActionLink("Sign In", "Ingresar", "Login")</button>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

