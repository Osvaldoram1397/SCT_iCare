@model IEnumerable<SCT_iCare.Sucursales>

@{
    ViewBag.Title = "Index";
}

<br />

<br />

<h3 style="color:white" class="text-center">Sucursales</h3>

<br />

<a href="~/Sucursales/Create"><button type="button" style="color:white" class="btn btn-outline-warning boton-transparente botonesGral" data-toggle="modal" data-target="#registrerModal"><span class="glyphicon glyphicon-plus"></span>&nbsp; Agregar Doctores</button></a>
<a href="~/Doctores/Index"><button type="button" style="color:white" class="btn btn-outline-warning boton-transparente botonesGral" data-toggle="modal" data-target="#registrerModal"><span class="glyphicon glyphicon-user"></span> &nbsp;Doctores</button></a>
<a href="~/Usuarios/Index"><button type="button" style="color:white" class="btn btn-outline-warning boton-transparente botonesGral" data-toggle="modal" data-target="#registrerModal"><span class="glyphicon glyphicon-user"></span> &nbsp;Usuarios</button></a>


<br />
<br />
<div class="tablaScroll">
    <table class="table tablas table-responsive" style="color: #2F2D6B">
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colonia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudades.Ciudad)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Nombre)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colonia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudades.Ciudad)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idSucursal }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idSucursal }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idSucursal })
                </td>
            </tr>
        }

    </table>
</div>

